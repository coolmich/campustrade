<div class='container'>
  <div class="center-row">
    <div class="container-fluid">
      <div class="col-xs-offset-0 col-sm-offset-1 col-md-offset-1 col-lg-offset-2">
        <div class="row header_above_form">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2">
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <h2>Sign In </h2>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2 left_big_icon">
            <img src="/assets/default.gif"/>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <div class="content">
              <div class="input_error_container">
                <div class="input_error_notice"></div>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :id => 'signinForm', :class => 'form-horizontal'}) do |f| %>
                <%= f.email_field :email, autofocus: true, class: 'form_input_field form-control', placeholder: 'Email' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control form_input_field', placeholder: 'Password' %>
                <%= f.submit "Sign in", class: "btn btn-warning form_input_button" %>
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %><%= f.label :remember_me, class: 'info_form-auxChoice' %>
                <% end -%>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>