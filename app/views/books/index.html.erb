<div class="container">
  <div class="row booklist">
    <% unless flash[:alert].nil? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong style="margin-left: 5px;"><%= flash[:alert].html_safe %></strong>
      </div>
    <% end %>
    <div class="book-center-block">
      <div class="col-md-6 bookinfo-row animated bounceIn">
        <% even_arr(@books.count-1).each do |f|%>
          <div class="single-book-block">
            <%= render 'item', :b=>@books[f], :prices => @prices[@books[f].id]%>
            <div class="bookprice-area" style="display: none;">
              <%= render 'pricelist', :prices => @prices[@books[f].id]%>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-6 bookinfo-row animated bounceIn">
        <% odd_arr(@books.count-1).each do |f|%>
          <div class="single-book-block">
            <%= render 'item', :b=>@books[f], :prices => @prices[@books[f].id]%>
            <div class="bookprice-area" style="display: none;">
              <%= render 'pricelist', :prices => @prices[@books[f].id]%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>