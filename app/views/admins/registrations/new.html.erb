<div class="center">
<h2>Sign Up</h2>
<div class="input_error_container">
	<div class="input_error_notice"></div>
</div>
<%= form_for(resource, as: resource_name, url: 'users/sign_up', :html => { :class => 'form-inline form', :id => 'signupForm'}) do |u| %>

  <%= u.text_field :name, class: 'form-control', style: 'width:250px;height:40px;margin-top:5px;', placeholder: 'Username' %><br>

  <%= u.text_field :email, class: 'form-control', style: 'width:250px;height:40px;margin-top:5px;', placeholder: 'Your campus email' %><br>

  <%= u.text_field :password, class: 'form-control', style: 'width:250px;height:40px;margin-top:5px;', placeholder: 'Password' %><br>

  <%= u.text_field :password_confirmation, class: 'form-control', style: 'width:250px;height:40px;margin-top:5px;', placeholder: 'Confirm password' %>

  <div><%= u.submit 'Sign up', class: "btn btn-warning info_form-submitButton" %></div>
<% end %>
</div>