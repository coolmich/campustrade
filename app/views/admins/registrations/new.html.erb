<div class='container'>
  <div class="center-row">
    <div class="container-fluid">
      <div class="col-xs-offset-0 col-sm-offset-1 col-md-offset-1 col-lg-offset-2">
        <div class="row header_above_form">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2">
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <h2>Sign Up</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2 left_big_icon">
            <img src="/assets/default.gif"/>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <div class="content">
              <div class="input_error_container">
                <div class="input_error_notice"></div>
              </div>
              <%= form_for(resource, as: resource_name, url: 'users/sign_up', :html => { :class => 'form-horizontal', :id => 'signupForm'}) do |u| %>
                <%= u.text_field :name, type: 'text', class: 'form-control form_input_field', placeholder: 'Username', id: 'signup_username' %>
                <%= u.text_field :email, class: 'form-control form_input_field', placeholder: 'Your campus email', id: 'signup_email' %>
                <%= u.text_field :password, class: 'form-control form_input_field', placeholder: 'Password', id: 'signup_password' %>
                <%= u.text_field :password_confirmation, class: 'form-control form_input_field',  placeholder: 'Confirm password', id: 'signup_confirm_password' %>
                <%= u.submit 'Sign up', class: "btn btn-warning form_input_button", id:'signup_confirmButton' %>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>