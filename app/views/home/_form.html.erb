<%= form_tag( books_path, :method=>'get', :class=>'form-horizontal', :id=>'isbnForm') do %>
  <ul class="tabs" role="tablist">
    <li class="active search-book-title"><img href="#bookname" role="tab" data-toggle="tab" src="/assets/default.gif"></li>
    <li class="search-book-isbn"><img href="#isbn" role="tab" data-toggle="tab" src="/assets/default.gif"></li>
    <li class="search-book-class"><img href="#classcode" role="tab" data-toggle="tab" src="/assets/default.gif"></li>
  </ul>
  <div class="tab-content content row">
    <div class="tab-pane active col-xs-offset-1 col-xs-10" id="bookname">
      <div class="form-group myForm-input-container">
        <%= text_field_tag :search, nil, :placeholder=>'Search By Bookname', :class=>'form-control index-book-search', :id=>"bookname" %>
        <%= hidden_field_tag :bookSearchType, :title %>
      </div>
    </div>
    <div class="form-group myForm-input-container row">
      <div class="col-xs-offset-1 col-xs-10">
        <%= submit_tag("Search", :class=>"btn btn-warning form-control")%>
      </div>
    </div>
  </div>
<% end %>