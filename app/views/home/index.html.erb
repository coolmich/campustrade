<div class="container">
  <div class="center-row">
    <% unless flash[:alert].nil? %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>Sorry!</strong> <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="input_error_container">
      <div class="input_error_notice"></div>
    </div>
    <div class="container-fluid">
      <div class="col-xs-offset-0 col-sm-offset-1 col-md-offset-1 col-lg-offset-2">
        <div class="row header_above_form">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2 left_big_icon">
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <h2>(Think about a title here)</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2 left_big_icon">
            <img src="/assets/default.gif"/>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <%= form_tag( books_path, :method=>'get', :class=>'form-horizontal', :id=>'isbnForm') do %>
              <ul class="tabs" role="tablist">
                <li class="active"><img href="#bookname" role="tab" data-toggle="tab" src="/assets/default.gif"></li>
                <li><img href="#isbn" role="tab" data-toggle="tab" src="/assets/default.gif"></li>
                <li><img href="#classcode" role="tab" data-toggle="tab" src="/assets/default.gif"></li>
              </ul>
              <div class="tab-content content row">
                <div class="tab-pane active col-xs-offset-1 col-xs-10" id="bookname">
                  <div class="form-group myForm-input-container">
                    <%= text_field_tag :search, nil, :placeholder=>'Search By Bookname', :class=>'form-control', :id=>"bookname" %>
                  </div>
                </div>
                <div class="tab-pane col-xs-offset-1 col-xs-10" id="isbn">
                  <div class="form-group myForm-input-container">
                    <%= text_field_tag :search, nil, :placeholder=>'Search By ISBN', :class=>'form-control', :id=>"isbnID" %>
                  </div>
                </div>
                <div class="tab-pane col-xs-offset-1 col-xs-10" id="classcode">
                  <div class="form-group myForm-input-container">
                    <%= text_field_tag :search, nil, :placeholder=>'Search By Classcode', :class=>'form-control', :id=>"classcode" %>
                  </div>
                </div>
                <div class="form-group myForm-input-container row">
                  <div class="col-xs-offset-1 col-xs-10">
                    <%= submit_tag("Search", :class=>"btn btn-warning form-control")%>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



