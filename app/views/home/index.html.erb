<div class="container">
  <div class="center-row">
    <% unless flash[:alert].nil? %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>Sorry!</strong> <%= flash[:alert] %>
      </div>
    <% end %>

    <% unless flash[:success].nil? %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <span>Your offer is saved ! </span>
        <strong style="margin-left: 5px;"><%= flash[:success].html_safe %></strong>
      </div>
    <% end %>

    <div class="input_error_container">
      <div class="input_error_notice"></div>
    </div>
    <div class="container-fluid">
      <div class="col-xs-offset-0 col-sm-offset-1 col-md-offset-1 col-lg-offset-2">
        <div class="row header_above_form">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2 left_big_icon">
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <h2>(Think about a title here)</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-0 col-sm-2 col-md-3 col-lg-2 left_big_icon">
            <img src="/assets/default.gif"/>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-7 col-lg-6 tabBox" align="center">
            <%= render 'form'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



