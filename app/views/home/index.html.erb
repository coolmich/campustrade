<% provide(:background_img, 'index-background') %>

<div class="container">
  <div class="center-row">
    <% unless flash[:alert].nil? %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>Sorry!</strong> <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="input_error_container">
      <div class="input_error_notice"></div>
    </div>
    <div class="container-fluid">
      <%= render 'form'%>
      <div align="center" class="enter-sell-intro-container">
        <b class="enter-sell-intro-text">You may also</b>
      </div>
      <div align="center" class="enter-sell-container">
        <p class="enter-sell-button"><b>Sell Your Book</b></p>
      </div>
    </div>
  </div>
</div>
