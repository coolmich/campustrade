<div class="center-row">
<% if has_alert? %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <strong>Sorry!</strong> <%= flash[:alert] %>
  </div>
<% end %>

<div class="input_error_container">
  <div class="input_error_notice"></div>
</div>
<div class="container-fluid">
  <%= form_tag( books_path, :method=>'get', :class=>'form-horizontal', :id=>'isbnForm') do %>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6">
        <%= text_field_tag :search, nil, :placeholder=>'Search ISBN', :class=>'form-control', :id=>"isbnID" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6">
        <%= submit_tag("Search", :class=>"btn btn-warning form-control")%>
      </div>
    </div>
  <% end %>
</div>
</div>